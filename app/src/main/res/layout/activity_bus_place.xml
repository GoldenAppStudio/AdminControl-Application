<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Travel">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Start Point"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColorHint="#222"
            android:id="@+id/startB"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:hint=" Start Point"
            android:background="@drawable/edittext_background">

        </Spinner>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Destination"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColorHint="#222"
            android:id="@+id/endB"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textMultiLine"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:hint=" Destinations"
            android:background="@drawable/edittext_background">

        </Spinner>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Bus Type"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColorHint="#222"
            android:id="@+id/type"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textMultiLine"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:hint=" Destinations"
            android:background="@drawable/edittext_background">

        </Spinner>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Fair"/>

        <EditText
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColorHint="#444"
            android:id="@+id/fairB"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background">

        </EditText>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Departure Time"/>

        <EditText
            android:textColorHint="#555"
            android:layout_marginEnd="10dp"
            android:inputType="textMultiLine"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:id="@+id/sT"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background">
        </EditText>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Arrival Time"/>

        <EditText
            android:textColorHint="#555"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:textSize="18sp"
            android:padding="8dp"
            android:id="@+id/eT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background">
        </EditText>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"/>

        <EditText
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColorHint="#222"
            android:id="@+id/dName"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background">

        </EditText>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Number"/>

        <EditText
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColorHint="#222"
            android:id="@+id/dNo"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background">

        </EditText>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conductor Name"/>

        <EditText
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColorHint="#222"
            android:id="@+id/cName"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background">

        </EditText>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conductor Number"/>

        <EditText
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColorHint="#222"
            android:id="@+id/cNo"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background">

        </EditText>

        <Button
            android:background="@drawable/gradient_button"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/okB"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Details"/>


    </LinearLayout>

</ScrollView>