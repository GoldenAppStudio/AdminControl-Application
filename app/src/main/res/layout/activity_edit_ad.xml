<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/edittext_background"
    android:layout_height="match_parent"
    tools:context=".NewStudentRegister">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AdImageX"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* service provider avatar"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginTop="10dp"
            android:id="@+id/text_review"/>
        <EditText
            android:id="@+id/AdNameX"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="* Advertiser Name"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/AdEmailX"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="Advertiser Email"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/AdNoX"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="Advertiser Phone"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/AdAddressX"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="Advertiser Address"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/AdWebX"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="Advertiser Website"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/AdSDX"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="* Short Description"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/AdLDX"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="* Long Description"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/pAD"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="* Priority (1-1000)"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:background="@drawable/gradient_button"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:id="@+id/AdOKX"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show In-App Ad"/>




    </LinearLayout>

</ScrollView>